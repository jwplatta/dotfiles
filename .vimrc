set nocompatible

" indenting
set expandtab
set autoindent
set shiftwidth=2
set tabstop=2

" search
set hlsearch
set ignorecase
set incsearch
set smartcase

" text rendering
set encoding=utf-8
set scrolloff=5
set wrap
" highlighting
" syntax on
syntax enable

" interace
set number
set noerrorbells
set title
set background=dark

" spell check
" set spell

" undo limit
set history=1000
set dir=~/.cache/vim
set backupdir=~/.cache/vim