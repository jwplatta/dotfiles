link-df(){
  link-als
  link-fun
  link-zsh
  link-zsh-lcl
  link-env
  link-gitignore
  link-vsc-settings
  link-vsc-keybindings
  link-vimrc
  link-bashrc
  link-bash-profile
  link-tool-versions
  link-iex-global
  link_psqlrc
  link-condarc
  link-tmux-conf
  link-gitconfig
  echo "dotfiles linked"
}

link-gitignore(){
  DEST="$HOME/.gitignore_global"
  ln -sf $HOME/dotfiles/git/gitignore_global $DEST
  print-dest $DEST
}

